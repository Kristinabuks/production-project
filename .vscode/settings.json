{
    "i18n-ally.localesPaths": [
        "public/locales",
        "src/shared/config/i18n"
    ],
    "editor.codeActionsOnSave": {
        "source.fixAll": true
      },
    "eslint.validate": ["javascript"],
    "[scss]": {
        "editor.defaultFormatter": "vscode.css-language-features"
    },
    "stylelint.enable": true,
    "css.validate": true,
    "scss.validate": true,
    "stylelint.validate": [
        "css",
        "scss"
    ],
}